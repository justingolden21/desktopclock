{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"jest": true // https://stackoverflow.com/a/55808280/4907950
	},
	"extends": ["airbnb-base", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["prettier", "svelte3"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"rules": {
		"prettier/prettier": "error",
		"indent": ["warn", "tab"],
		"quotes": ["warn", "single", { "avoidEscape": true }],
		"no-unused-vars": "warn",
		"no-console": "off",
		"no-tabs": "off",
		"no-restricted-syntax": "off",
		"func-names": "off",
		"quote-props": ["error", "consistent-as-needed"],
		"guard-for-in": "off",
		"import/extensions": "off",
		"new-cap": "off",
		"import/no-extraneous-dependencies": "off",
		"no-param-reassign": "off",
		// until sveltekit gets everything figured out for $lib imports:
		"import/no-unresolved": "off",
		"radix": "off"
	}
}
